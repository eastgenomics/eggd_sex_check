{
  "name": "eggd_sex_check",
  "title": "eggd_sex_check",
  "summary": "Verifies the reported sex of given sample",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "inputSpec": [
    {
      "name": "input_bam",
      "label": "BAM file to run sex check on",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bam$"
      ],
      "help": ""
    },
    {
      "name": "index_file",
      "label": "Index of BAM file",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bai$"
      ],
      "help": ""
    },
    {
      "name": "male_threshold",
      "label": "Value above which the sample is considered male",
      "class": "float",
      "optional": false,
      "help": ""
    },
    {
      "name": "female_threshold",
      "label": "Value below which the sample is considered female",
      "class": "float",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "idxstat_output",
      "label": "Output from samtools idxstat",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "sex_check_result",
      "label": "Result of running sex check",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "assetDepends": [
      {
          "id": "record-Gg2GP0Q4zJKFz8gP3Gf4Q11v"
      },
      {
          "name": "samtools_asset",
          "version": "2.0.0",
          "project": "project-Fkb6Gkj433GVVvj73J7x8KbV",
          "folder": "/app_assets/samtools/samtools_v1.19.2/"
      }
    ],
    "interpreter": "python3",
    "file": "src/sex_check.py",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": ["*"]
  },
  "developers": ["org-emee_1"],
  "authorizedUsers": ["org-emee_1"],
  "regionalOptions": {
    "aws:eu-central-1": {
